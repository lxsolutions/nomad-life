# Nomad Life Unified Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database?schema=public"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# API Configuration
API_PORT=3001
API_HOST="localhost"

# Redis
REDIS_URL="redis://localhost:6379"

# Email Service
EMAIL_PROVIDER="sendgrid" # or "smtp", "mailgun", etc.
EMAIL_API_KEY="your-email-api-key"
EMAIL_FROM="noreply@nomadlife.com"

# File Storage
STORAGE_PROVIDER="local" # or "s3", "gcs", etc.
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="your-bucket-name"

# Payment Processing
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Logging
LOG_LEVEL="info" # debug, info, warn, error
LOG_FORMAT="json" # json, pretty

# Monitoring
SENTRY_DSN="your-sentry-dsn"
DATADOG_API_KEY="your-datadog-api-key"

# Feature Flags
FEATURE_NEW_BOOKING_FLOW="false"
FEATURE_DRIVER_VERIFICATION="true"
