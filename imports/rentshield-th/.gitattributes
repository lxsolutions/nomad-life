
# Normalize line endings
* text=auto eol=lf

# These files are binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.mp4 binary
*.webm binary
*.wav binary
*.mp3 binary
*.m4a binary
*.flac binary
*.aac binary
*.ogg binary

# These files should always have LF line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sql text eol=lf

# These files should be treated as binary (no line ending conversion)
*.bin binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
