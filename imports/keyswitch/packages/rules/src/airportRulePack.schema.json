
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Airport Rule Pack",
  "description": "Schema for validating airport compliance rule packs",
  "type": "object",
  "required": [
    "airport_code",
    "airport_name",
    "effective_from",
    "pickup_zone",
    "return_zone",
    "allowed_hours",
    "dropoff_grace_minutes",
    "fees",
    "permits_required",
    "rulepack_version"
  ],
  "properties": {
    "airport_code": {
      "type": "string",
      "description": "IATA airport code (e.g., DEN, LAX)",
      "pattern": "^[A-Z]{3}$"
    },
    "airport_name": {
      "type": "string",
      "description": "Full name of the airport"
    },
    "effective_from": {
      "type": "string",
      "format": "date-time",
      "description": "When this rule pack becomes effective"
    },
    "pickup_zone": {
      "type": "object",
      "description": "GeoJSON Polygon defining the pickup zone",
      "required": ["type", "coordinates"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Polygon"]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          }
        }
      }
    },
    "return_zone": {
      "type": "object",
      "description": "GeoJSON Polygon defining the return zone",
      "required": ["type", "coordinates"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Polygon"]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          }
        }
      }
    },
    "allowed_hours": {
      "type": "array",
      "description": "Allowed operating hours for pickups and returns",
      "items": {
        "type": "object",
        "required": ["day", "start_time", "end_time"],
        "properties": {
          "day": {
            "type": "string",
            "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]
          },
          "start_time": {
            "type": "string",
            "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$"
          },
          "end_time": {
            "type": "string",
            "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$"
          }
        }
      }
    },
    "dropoff_grace_minutes": {
      "type": "integer",
      "description": "Grace period in minutes for dropoff timing",
      "minimum": 0,
      "maximum": 120
    },
    "fees": {
      "type": "object",
      "description": "Fee structure for airport operations",
      "required": ["airport_access_per_trip", "parking_rate_per_hour"],
      "properties": {
        "airport_access_per_trip": {
          "type": "number",
          "minimum": 0
        },
        "parking_rate_per_hour": {
          "type": "number",
          "minimum": 0
        },
        "curbside_violation_fee": {
          "type": "number",
          "minimum": 0
        },
        "permit_fee": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "permits_required": {
      "type": "array",
      "description": "List of required permits for operation",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or special instructions"
    },
    "rulepack_version": {
      "type": "string",
      "description": "Semantic version of the rule pack",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  }
}
